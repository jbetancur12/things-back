    "mongodb",
    "rest",
    "api"
  ],
  "author": "Jorge Betancur",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.18.1",
    "express-jwt": "^7.7.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.4.6",
    "mongoose-geojson-schema": "^2.2.2",
    "mqtt": "^4.3.7"
  },
  "devDependencies": {
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier-config-standard": "^5.0.0",
    "standard": "^17.0.0"
  },
  "lint-staged": {
    "*.js": [
      "npx prettier --write",
      "standard --fix"
