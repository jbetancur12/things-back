{
  "name": "nodejs-express-mongodb",
  "version": "1.0.0",
  "description": "Node.js Restful CRUD API with Node.js, Express and MongoDB",
  "main": "server.js",
  "type": "module",
  "prettier": "prettier-config-standard",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
